<h1 class="">Edit Sponsored Post</h1>
<div class="row">
  <%= form_for [@sponsored_post.topic,@sponsored_post] do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control", placeolder:"Enter post title" %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: "form-control", placeolder: "Enter post body"%>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_area :price, class: "form-control", placeolder: "Enter post price"%>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
