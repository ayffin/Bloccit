
<h1>Edit Question</h1>
<%= link_to "<< view all questions", questions_path%>
<div class="col-md-8">
  <%= form_for @question do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control", placeolder:"Enter post title" %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: "form-control", placeolder: "Enter post body"%>
    </div>
    <div class="form-group">
      <%= f.label :resolved, class: 'checkbox' do%>
      <%= f.check_box :resolved%> Resolved
      <% end %>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
