<h1> New Advertisement</h1>
<div class="col-md-8">
  <%= form_for @advertisement do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control", placeolder:"Enter advertisement title" %>
    </div>
    <div class="form-group">
      <%= f.label :copy %>
      <%= f.text_area :copy, class: "form-control", placeolder: "Enter advertisement copy"%>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control", placeolder:"Enter advertisement price" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-success" %>
    </div>
  <% end %>
  <%= link_to("<< to view all advertisement", advertisements_path)%>
</div>
